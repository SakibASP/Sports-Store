<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportsStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>  
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>                      
                        @if (User.Identity.IsAuthenticated)
                        {
                            @await Component.InvokeAsync("Menu");
                            @*
                            <li>
                                    <a class="nav-link text-dark" href="https://sandbox.braintreegateway.com/merchants/hxcc3jsbtmkkjcpt/home">Payments</a>
                            </li>
                            <li>
                                    <a class="nav-link text-dark" href="#">Reports</a>
                            </li>
                            *@
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
         <div class="form-control" style="background-color:darkcyan">
            @*<div class="col-md-2">
            </div>*@
            <div class="text-center">
                    <a  class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span style="color: black; font-size: smaller;">WELCOME &nbsp; </span>@User.Identity?.Name! </a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="text-center text-success">@TempData["Success"]</div>
        <div class="text-center text-danger">@TempData["Error"]</div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
